<ehcache> 
   <diskStore 
      path="java.io.tmpdir"/> 
   <defaultCache 
      maxElementsInMemory="1000" 
      eternal="false" 
      timeToIdleSeconds="600" 
      timeToLiveSeconds="1200" 
      overflowToDisk="true" 
      diskPersistent="false" 
      diskExpiryThreadIntervalSeconds="1200" 
      memoryStoreEvictionPolicy="LRU" 
   /> 
</ehcache>